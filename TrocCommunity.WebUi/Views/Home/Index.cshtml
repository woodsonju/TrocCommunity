<div class="container" id="container-section-picture">
    <div class="row">
        <h2 id="title-section-raisons">Pourquoi ce site ?</h2>
    </div>
    <div class="row" id="section-picture">
        <div class="col-md-4 col-sm-12 section-picture-card">
            <div class="section-picture-image">
                <img src="~/Content/TEMPLATE/images/livre2.jpg" alt="Découverte" class="img-fluid picture-image" />
            </div>
            <div class="section-picture-titre-card">
                <h3 class="text-center title-picture">Découverte</h3>
            </div>
        </div>
        <div class="col-md-4 col-sm-12 section-picture-card">
            <div class="section-picture-image">
                <img src="~/Content/TEMPLATE/images/rencontrer.jpg" alt="rencontre" class="img-fluid picture-image" />
            </div>
            <div class="section-picture-titre-card">
                <h3 class="text-center title-picture">Echange</h3>
            </div>
        </div>
        <div class="col-md-4 col-sm-12 section-picture-card">
            <div class="section-picture-image">
                <img src="~/Content/TEMPLATE/images/ecology.jpg" alt="Ecologie" class="img-fluid picture-image" />
            </div>
            <div class="section-picture-titre-card">
                <h3 class="text-center title-picture">Environnement</h3>
            </div>
        </div>
    </div>
</div>


<!-- Section Last Books  -->

<div class="container" id="container-last-books">
    <h2 id="title-section-last-books">Derniers ajouts</h2>
    <div class="row" id="section-last-books">

        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-12 section-book-card">

                <div class="section-picture-book-image thumbnail">
                    <img src="~/Content/TEMPLATE/images/Livres/@item.Image" alt="Découverte" class="img-fluid image-livre-catalogue" />
                </div>
                <div>
                    <h3 class="text-center titre-books-thumbnail">@item.Title</h3>
                    <p class="text-center">@item.Author</p>
                    <div class="books-items">
                        <p class="books-points text-center">100 points</p>
                    </div>
                    <p class="text-center">Ville</p>
                </div>

            </div>
        }

    </div>
</div>


